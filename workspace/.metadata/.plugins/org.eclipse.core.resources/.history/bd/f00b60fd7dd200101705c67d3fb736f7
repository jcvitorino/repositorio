#ifndef HEXDIFF_H_
#define HEXDIFF_H_

#include <list>
#include <cmath>
#include "DNA.h"
using namespace std;

class HexValue {
private:
	DNAseq hex;
	double value;
public:
	HexValue(DNAseq hex, double ratio);
	DNAseq getHex() const;
	double getValue() const;
	void setHex(DNAseq hex);
	void setValue(double ratio);
};

class FrameScore {
private:
	DNAseq seq;
	vector<HexValue> hexScore;
public:
	FrameScore(DNAseq seq, vector<HexValue> hexScore);
	int getPosition() const;
	double getScore() const;
	void setPosition(int position);
	void setScore(double score);
	double totalScore();
};

class HexDiff {
public:
	HexDiff(DNA posSet, DNA negSet, int lengthHd, int windowSize,
			double threshold);
	virtual ~HexDiff();
	DNA posSet; // Positive Set
	DNA negSet; // Negative Set
	list<HexValue> Hd;
	list<HexValue> HdPos;
	list<HexValue> HdNeg;
	double threshold;
	int lengthHd;
	int windowSize;
	list<FrameScore> scoreList;
	void performFrequency();
	void chooseHexamers();
	void computeScore();
	void printHd();
	void printScore();
	void loocv();
};

extern bool compareRatio(HexValue first, HexValue second);
extern DNAseq nextLeaf(DNAseq a, int L);
#endif /* HEXDIFF_H_ */
