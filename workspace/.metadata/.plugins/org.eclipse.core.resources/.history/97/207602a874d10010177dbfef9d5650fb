#include <iostream>
#include "HexDiff.h"
using namespace std;

int main() {
	 // conjunto negativo
	char* finFSA2 = "ramdomSet2.fasta";
	// conjunto positivo
	char* finFSA = "resultado.fasta";
	// conjunto positivo
	//char* finFSA = "sampling_500.fasta";
	DNA s1, s2;
	s1.readFasta(finFSA);
	s2.readFasta(finFSA2);
	HexDiff hex(s1, s2, 500, 1200, 150);
	hex.performFrequency();
	hex.chooseHexamers();
	hex.printHd();
	return 0;
}
